# Database Configuration
# PostgreSQL connection string - works with any PostgreSQL provider
# 
# Local PostgreSQL (Docker):
# DATABASE_URL="postgresql://postgres:password@localhost:5432/myapp"
#
# Supabase:
# DATABASE_URL="postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres"
#
# Railway:
# DATABASE_URL="postgresql://postgres:[password]@[host].railway.app:5432/railway"
#
# Neon:
# DATABASE_URL="postgresql://[user]:[password]@[host].neon.tech/[database]?sslmode=require"
#
# AWS RDS:
# DATABASE_URL="postgresql://[user]:[password]@[host].rds.amazonaws.com:5432/[database]"
#
# Google Cloud SQL:
# DATABASE_URL="postgresql://[user]:[password]@[host]/[database]?host=/cloudsql/[instance]"
#
DATABASE_URL="postgresql://username:password@localhost:5432/dbname"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication (Better Auth)
BETTER_AUTH_SECRET="your-auth-secret-here-generate-with-openssl-rand-base64-32"
BETTER_AUTH_URL="http://localhost:3000"

# Email Configuration (Plunk)
PLUNK_API_KEY="your-plunk-api-key-here"
PLUNK_FROM_EMAIL="noreply@example.com"
PLUNK_REPLY_TO_EMAIL="support@example.com"

# App Configuration
NEXT_PUBLIC_APP_NAME="Your App Name"

# Email Verification
EMAIL_VERIFICATION_REQUIRED="true"

# External Services
# Sentry (Error Monitoring)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_SENTRY="false"

# Development
NODE_ENV="development"