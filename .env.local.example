# Local Development Configuration
# Copy this file to .env.local for local development with Docker

# Database Configuration (matches docker-compose.yml)
DATABASE_URL="postgresql://postgres:password@localhost:5432/myapp"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication (Better Auth)
BETTER_AUTH_SECRET="local-dev-secret-change-in-production"
BETTER_AUTH_URL="http://localhost:3000"

# Email Configuration (Plunk)
PLUNK_API_KEY="your-plunk-api-key-here"
PLUNK_FROM_EMAIL="noreply@localhost"
PLUNK_REPLY_TO_EMAIL="support@localhost"

# App Configuration
NEXT_PUBLIC_APP_NAME="Local Dev App"

# Email Verification
EMAIL_VERIFICATION_REQUIRED="false"

# Development
NODE_ENV="development"